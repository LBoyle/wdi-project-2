<% if(event) { %>
  <section class="hero">
    <div class="hero-body">
      <div class="columns">
        <div class="column is-6">
          <h1 class="title"><%= event.name %></h1>
          <p><%= event.dates.start.localDate %>, <%= event.dates.start.localTime %></p>
          <p>Promoter: <%= event.promoter.name.toLowerCase() %></p>
        </div>
        <div class="column is-6">
          <a href="#">Save to your favourites</a><br>
          <a href="<%= event.url %>">View on TicketMaster</a>
        </div>
      </div>
    </div>
  </section>
  <section class="hero">
    <div class="columns">
      <div class="column is-6 is-offset-3">
        <img src="<%= event.images[0].url %>" alt="">
      </div>

    </div>
  </section>
  <section class="hero is-warning confirmedArtists" data-url="<%=  %>">
    <div class="columns">
      <div class="column is-6 is-offset-3">
        <h1 class="title">Confirmed Artists</h1>
        <p><%= 'http://app.ticketmaster.com'+event._links.attractions[0].href.split('?')[0]+'?'+'apikey=sJdyvBFWmrZySkRDzJ2v0wNi2qtLb7pn&'+event._links.attractions[0].href.split('?')[1] %></p>
      </div>
    </div>
  </section>
<% }else{ %>
  <h4>No event found</h4>
<% } %>

<script type="text/javascript">
  $(() => {
    $('.confirmedArtists').on('click', () => {

    });
  });
</script>

